/* ========================================
   Inlayo Design System
   Template-Style Unified CSS
   Based on Hanayo (akatsuki.gg) Design
   ======================================== */

/* ========== CSS Variables ========== */
:root {
  /* HSL Base */
  --base: 0;
  
  /* Brand Colors */
  --primary: #f6a;
  --primary-hover: #ff77bb;
  --primary-dark: #ee5599;
  --secondary: #6c7a9e;
  --accent: #6dd2ff;
  --success: #66e39e;
  --warning: #ffb347;
  --error: #ff5f7e;
  
  /* Backgrounds - Hanayo Style */
  --bg-page: hsl(0, 0%, 15%);
  --bg-surface: hsl(0, 0%, 16%);
  --bg-card: hsl(0, 0%, 18%);
  --bg-elevated: hsl(0, 0%, 16%);
  --bg-hover: hsl(0, 0%, 16%);
  
  /* Text */
  --text-primary: #ffffff;
  --text-secondary: #c0c5d6;
  --text-muted: #8b92a7;
  
  /* Borders & Shadows */
  --border-radius: 4px;
  --border-color: rgba(255, 255, 255, 0.08);
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.2);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.3);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.4);
  
  /* Spacing */
  --space-xs: 0.5rem;
  --space-sm: 1rem;
  --space-md: 1.5rem;
  --space-lg: 2.5rem;
  --space-xl: 4rem;
  
  /* Transitions */
  --transition: 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ========== Base Resets ========== */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  min-height: 100%;
  scroll-behavior: smooth;
  background: hsl(0, 0%, 15%);
}

body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  color: var(--text-primary);
  background: hsl(0, 0%, 15%);
  line-height: 1.6;
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ========== Typography ========== */
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.3;
  color: var(--text-primary);
}

.title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: var(--space-md);
  color: var(--text-primary);
}

.subtitle {
  font-size: 1rem;
  font-weight: 400;
  color: var(--text-secondary);
  line-height: 1.6;
}

a {
  color: var(--primary);
  text-decoration: none;
  transition: color var(--transition);
}

a:hover {
  color: var(--primary-hover);
}

/* ========== Layout ========== */
.container {
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 var(--space-md);
}

.my-con {
  margin-top: 4.5rem;
  padding-bottom: var(--space-xl);
}

/* ========== Cards - Hanayo Style ========== */
.box,
.main-block {
  background: hsl(0, 0%, 18%);
  border: 0;
  border-radius: 4px;
  padding: var(--space-lg);
  box-shadow: 0 1px 2px 0 rgba(34, 36, 38, 0.15);
  transition: transform 0.1s ease;
}

.box:hover,
.main-block:hover {
  transform: scale(0.98);
}

/* ========== Buttons - Hanayo Style ========== */
.button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.75rem 1.5rem;
  font-size: 0.95rem;
  font-weight: 600;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: transform 0.1s ease;
  text-decoration: none;
}

.button.is-primary {
  background: #f6a;
  color: white;
  box-shadow: 0 1px 2px 0 rgba(34, 36, 38, 0.15);
}

.button.is-primary:hover {
  background: #ff77bb;
  transform: scale(0.98);
}

.button.is-light {
  background: hsl(0, 0%, 18%);
  color: var(--text-primary);
  border: none;
}

.button.is-light:hover {
  background: hsl(0, 0%, 20%);
  transform: scale(0.98);
}

.button.is-info {
  background: hsl(0, 0%, 18%);
  color: var(--text-primary);
  border: none;
}

.button.is-info:hover {
  background: hsl(0, 0%, 20%);
  transform: scale(0.98);
}

.buttons {
  display: flex;
  gap: var(--space-sm);
  flex-wrap: wrap;
}

/* ========== Forms ========== */
.field {
  margin-bottom: var(--space-md);
}

.label {
  display: block;
  font-size: 0.9rem;
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: var(--space-xs);
}

.control {
  position: relative;
}

.input,
.textarea,
.select select {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: 0.95rem;
  color: var(--text-primary);
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  transition: all var(--transition);
  outline: none;
}

.input:focus,
.textarea:focus,
.select select:focus {
  border-color: var(--primary);
  background: var(--bg-elevated);
  box-shadow: 0 0 0 3px rgba(246, 102, 170, 0.1);
}

.input::placeholder {
  color: var(--text-muted);
}

.control.has-icons-left .input {
  padding-left: 3rem;
}

.control.has-icons-left .icon {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
  pointer-events: none;
}

/* ========== Navigation - Hanayo Style ========== */
.navbar {
  background: hsl(0, 0%, 10%);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  min-height: 3.5rem;
  box-shadow: 0 6px 22px 0 rgba(0, 0, 0, 0.22);
  border: none;
}

.navbar-menu {
  display: flex;
  align-items: center;
}

.navbar-item {
  color: rgba(255, 255, 255, 0.7);
  padding: 1rem 1.25rem;
  transition: all var(--transition);
  font-size: 0.95rem;
}

.navbar-item:hover,
.navbar-link:hover {
  color: #ffffff;
  background: rgba(255, 255, 255, 0.05);
}

.navbar-link {
  color: rgba(255, 255, 255, 0.7);
  padding: 1rem 1.25rem;
  transition: all var(--transition);
  cursor: pointer;
}

.navbar-link::after {
  border-color: rgba(255, 255, 255, 0.5);
}

.navbar-item.has-dropdown {
  padding: 0;
  position: relative;
}

.navbar-item.has-dropdown.is-hoverable:hover .navbar-dropdown,
.navbar-item.has-dropdown.is-hoverable:focus-within .navbar-dropdown {
  display: block;
}

.navbar-dropdown {
  background: var(--bg-surface);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--border-color);
  padding: 0.25rem 0;
  margin-top: 0;
  min-width: 180px;
  position: absolute;
  top: 100%;
  left: 0;
  z-index: 9999;
  display: none;
}

.navbar-dropdown .navbar-item {
  padding: 0.65rem 1.25rem;
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  white-space: nowrap;
}

.navbar-dropdown .navbar-item:hover {
  background: rgba(255, 255, 255, 0.08);
  color: #ffffff;
}

.navbar-logo-img {
  background-image: url(/static/images/Inlayowhite.png);
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
}

/* Search Bar */
.search-bar {
  position: relative;
}

.search-results {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  min-width: 300px;
  background: var(--bg-surface);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-lg);
  max-height: 400px;
  overflow-y: auto;
  visibility: hidden;
  z-index: 10000;
}

.search-results[style*="visibility: visible"] {
  visibility: visible;
}

.result-wrapper {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  padding: 0.75rem 1rem;
  cursor: pointer;
  transition: background var(--transition);
  border-bottom: 1px solid var(--border-color);
}

.result-wrapper:last-child {
  border-bottom: none;
}

.result-wrapper:hover {
  background: rgba(255, 255, 255, 0.05);
}

#result-image {
  width: 40px;
  height: 40px;
  background-size: cover;
  background-position: center;
  border-radius: var(--border-radius);
  flex-shrink: 0;
}

#result-name {
  font-size: 0.95rem;
  color: var(--text-primary);
  margin: 0;
}

#nothing {
  padding: 0.75rem 1rem;
  text-align: center;
  color: var(--text-muted);
  font-size: 0.8rem;
  font-weight: 400;
}

/* ========== Tables - Hanayo Style ========== */
.table {
  width: 100%;
  background: transparent;
  color: var(--text-primary);
  border-collapse: separate;
  border-spacing: 0 3px;
}

.table thead th {
  background: transparent;
  color: var(--text-secondary);
  font-weight: 600;
  font-size: 12px;
  text-transform: none;
  letter-spacing: 0;
  padding: 5px 12px;
  border: none;
  opacity: 0.7;
}

.table tbody tr {
  background: hsl(0, 0%, 18%);
  border: none;
  transition: transform 0.1s ease;
}

.table tbody tr:hover {
  transform: scale(1.01);
  background: hsl(0, 0%, 16%);
}

.table tbody td {
  padding: 12px;
  border: none;
}

/* ========== Stats & Leaderboards ========== */
.stat-box {
  background: var(--bg-surface);
  border-radius: var(--border-radius);
  padding: var(--space-md);
  text-align: center;
  border: 1px solid var(--border-color);
}

.stat-value {
  font-size: 2rem;
  font-weight: 700;
  color: var(--primary);
  margin-bottom: 0.25rem;
}

.stat-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.leaderboard-row {
  background: var(--bg-card);
  border-radius: var(--border-radius);
  padding: var(--space-md);
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  gap: var(--space-md);
  transition: all var(--transition);
  border: 1px solid var(--border-color);
}

.leaderboard-row:hover {
  background: var(--bg-hover);
  transform: translateX(4px);
  border-color: rgba(246, 102, 170, 0.3);
}

.rank-number {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-muted);
  min-width: 3rem;
  text-align: center;
}

.rank-number.rank-1 { color: #ffd700; }
.rank-number.rank-2 { color: #c0c0c0; }
.rank-number.rank-3 { color: #cd7f32; }

.score-card {
  background: hsl(0, 0%, 15%);
  border-radius: 4px;
  padding: 8px 0;
  margin: 8px 0;
  border: none;
  transition: 0.1s ease;
}

.score-card:hover {
  background: hsl(0, 0%, 16%);
  transform: scale(1.01);
}

/* ========== Messages & Notifications ========== */
.message {
  border-radius: var(--border-radius);
  padding: var(--space-md);
  margin-bottom: var(--space-md);
  border: 1px solid var(--border-color);
}

.message.is-info {
  background: rgba(109, 210, 255, 0.1);
  border-color: rgba(109, 210, 255, 0.3);
}

.message.is-warning {
  background: rgba(255, 179, 71, 0.1);
  border-color: rgba(255, 179, 71, 0.3);
}

.message.is-danger {
  background: rgba(255, 95, 126, 0.1);
  border-color: rgba(255, 95, 126, 0.3);
}

.message.is-success {
  background: rgba(102, 227, 158, 0.1);
  border-color: rgba(102, 227, 158, 0.3);
}

.noti-banner {
  background: var(--bg-surface);
  border-left: 4px solid var(--primary);
  padding: var(--space-md);
  margin-bottom: var(--space-lg);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-sm);
}

.noti-banner-warning {
  border-left-color: var(--warning);
}

.noti-column {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.noti-bannertype {
  font-weight: 700;
  font-size: 1.1rem;
  color: var(--warning);
}

.noti-bannertext {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.noti-banner-text {
  flex: 1;
  color: var(--text-primary);
}

.paper-snackbar {
  position: fixed;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  padding: 1rem 1.5rem;
  background: var(--bg-elevated);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-lg);
  z-index: 9999;
  animation: slideInUp 0.3s ease;
  border-left: 4px solid;
  max-width: 90%;
}

.paper-snackbar.is-success { border-left-color: var(--success); }
.paper-snackbar.is-error { border-left-color: var(--error); }
.paper-snackbar.is-warning { border-left-color: var(--warning); }

@keyframes slideInUp {
  from {
    transform: translateX(-50%) translateY(100px);
    opacity: 0;
  }
  to {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
  }
}

/* ========== Auth Pages ========== */
.is-auth {
  max-width: 480px;
  margin: 0 auto;
}

.is-auth .my-con {
  margin-top: 12vh;
}

.title-block {
  padding: var(--space-xl) 0 var(--space-lg);
  text-align: center;
}

.is-weeb {
  background: var(--bg-card);
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-color);
}

.dialog {
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin-bottom: var(--space-md);
  text-align: center;
}

.dialog a {
  color: var(--primary);
  font-weight: 600;
}

/* ========== Tabs ========== */
.tabs {
  border-bottom: 1px solid var(--border-color);
}

.tabs li.is-active a {
  border-bottom-color: var(--primary);
  color: var(--primary);
}

.tabs a {
  color: var(--text-secondary);
  border-bottom: 2px solid transparent;
  transition: all var(--transition);
  padding: 0.75rem 1rem;
}

.tabs a:hover {
  color: var(--text-primary);
  border-bottom-color: rgba(246, 102, 170, 0.3);
}

/* ========== Progress ========== */
.progress {
  background: var(--bg-surface);
  border-radius: var(--border-radius);
  height: 1rem;
  overflow: hidden;
}

.progress::-webkit-progress-bar {
  background: var(--bg-surface);
}

.progress::-webkit-progress-value {
  background: linear-gradient(90deg, var(--primary), var(--primary-hover));
}

.progress::-moz-progress-bar {
  background: linear-gradient(90deg, var(--primary), var(--primary-hover));
}

/* ========== Tags ========== */
.tag {
  background: rgba(255, 255, 255, 0.08);
  color: var(--text-primary);
  border-radius: var(--border-radius);
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  display: inline-flex;
  align-items: center;
}

.tag.is-primary {
  background: rgba(246, 102, 170, 0.2);
  color: var(--primary);
}

/* ========== Footer ========== */
.footer {
  background: var(--bg-surface);
  padding: var(--space-lg);
  margin-top: auto;
  border-top: 1px solid var(--border-color);
  text-align: center;
}

.foot-link {
  color: var(--text-secondary);
  margin: 0 var(--space-sm);
  transition: color var(--transition);
}

.foot-link:hover {
  color: var(--primary);
}

/* ========== Mode Icons ========== */
@font-face {
  font-family: osu-mode;
  src: url(/static/fonts/extra.ttf) format("truetype");
}

.mode-icon {
  font-family: osu-mode;
  color: #fff;
  font-size: 14px;
  width: 19px;
  height: 19px;
  margin-right: 4px;
}

.mode-osu::before { content: "\E800"; }
.mode-catch::before { content: "\E801"; }
.mode-mania::before { content: "\E802"; }
.mode-taiko::before { content: "\E803"; }

/* ========== Utility Classes ========== */
.flex { display: flex; }
.flex-vcenter { align-items: center; }
.flex-lcenter { justify-content: center; }
.flex-between { justify-content: space-between; }
.flex-column { flex-direction: column; }
.text-left { text-align: left !important; }
.text-right { text-align: right !important; }
.text-center { text-align: center !important; }
.p-less { padding: 0 !important; }
.m-less { margin: 0 !important; }
.pm-reset { padding: 0 !important; margin: 0 !important; }
.p-pad { padding: 1.25rem; }
.h-max { height: 100%; }
.w-locked { width: 1152px; }
.mt-5 { margin-top: var(--space-lg); }
.mb-5 { margin-bottom: var(--space-lg); }
.headericon { font-size: 74px; }

.is-active .navbar-menu { display: block; }
.file-cta { border-color: transparent; }

/* ========== Scrollbar ========== */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: var(--bg-page);
}

::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--border-radius);
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

/* ========== Selection ========== */
::selection {
  background: rgba(246, 102, 170, 0.3);
  color: #fff;
}

/* ========== Loading States ========== */
.is-loading {
  position: relative;
  pointer-events: none;
  color: transparent !important;
}

.is-loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 1rem;
  height: 1rem;
  margin: -0.5rem 0 0 -0.5rem;
  border: 2px solid transparent;
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ========== Responsive Design ========== */
@media screen and (max-width: 1024px) {
  :root {
    --space-lg: 1.5rem;
    --space-xl: 2rem;
  }
  
  .container {
    max-width: 100%;
  }
  
  .my-con {
    margin-top: 4rem;
  }
}

@media screen and (max-width: 768px) {
  .title {
    font-size: 1.75rem;
  }
  
  .buttons {
    flex-direction: column;
  }
  
  .button {
    width: 100%;
  }
  
  .navbar-burger {
    display: block;
  }
  
  .is-auth {
    max-width: 100%;
    padding: var(--space-sm);
  }
  
  .navbar-dropdown {
    position: static;
    box-shadow: none;
    background: rgba(0, 0, 0, 0.2);
    padding-left: 1.5rem;
  }
}

@media screen and (max-width: 480px) {
  .container {
    padding: 0 var(--space-sm);
  }
  
  .stat-box {
    padding: var(--space-sm);
  }
  
  .leaderboard-row {
    flex-direction: column;
    text-align: center;
  }
}
